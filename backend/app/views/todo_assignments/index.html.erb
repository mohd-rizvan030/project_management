<p id="notice"><%= notice %></p>

<h1>Todo Assignments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Todo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_assignments.each do |todo_assignment| %>
      <tr>
        <td><%= todo_assignment.user_id %></td>
        <td><%= todo_assignment.todo %></td>
        <td><%= link_to 'Show', todo_assignment %></td>
        <td><%= link_to 'Edit', edit_todo_assignment_path(todo_assignment) %></td>
        <td><%= link_to 'Destroy', todo_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

